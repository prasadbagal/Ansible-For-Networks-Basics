  ---

- hosts: ios
  connection: local
  gather_facts: no
#  serial: 1


  tasks:
  - name: run show version on remote devices -- first task
    ios_command:
      commands:
        - show version
        - show ip interf br
    register: cmd_op

  - name: priting the output  -- second task
    debug:
      var: cmd_op.stdout_lines


  - name: configure top level configuration
    ios_config:
      lines: ip access-list standard test1
